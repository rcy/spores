
function rand(val) {
  return Math.floor(Math.random() * val);
}

var width, height, c, ctx;

setupCanvas();

$(window).resize(function() {
  setupCanvas();
})

function setupCanvas() {
  $('body').html('');
  width = document.documentElement.clientWidth;
  height = document.documentElement.clientHeight;
  $('body').html('<canvas id="myCanvas" width="'+width+'" height="'+height+'"></canvas>');
  c = document.getElementById("myCanvas");
  ctx=c.getContext("2d");
}

var red = 0;
var green = 0;
var blue = 0;

setInterval(drawStuff, 50);

var paused = false;
$('body').click(function() {
  togglePause();
});
document.addEventListener('touchstart', function(e) {
  togglePause();
}, false);

function togglePause(){
  paused = !paused;
  if (paused) {
    document.title = 'spores: paused';
  } else {
    document.title = 'spores';
  }
}

function drawStuff() {
  if (!paused) {
    for (var i = 0; i < 1; i++) {
      circle();
      fadeColors();
    }
  }
}

var x = 100;
var y = 100;
var xdir = Math.random();
var ydir = Math.random();
var factor = 1;

function circle() {
  var max = Math.max(width, height);
  ctx.beginPath();
  ctx.arc(rand(width), rand(height), rand(max / 16) + max/32, 0, 2 * Math.PI, true);
  ctx.fill();
}

function square() {
  var x = rand(width);
  var y = rand(height);
  var l = rand(80) + 20;
  ctx.beginPath();
  ctx.moveTo(x, y);
  ctx.lineTo(x+l, y);
  ctx.lineTo(x+l, y+l);
  ctx.lineTo(x, y+l);
  ctx.lineTo(x, y);
  ctx.closePath();
  ctx.fill();
}

redDir = Math.random();
blueDir = Math.random();
greenDir = Math.random();

function fadeColors() {
  red += redDir;
  if (red > 255) redDir = -Math.random();
  if (red < 0) redDir = +Math.random();

  green += greenDir;
  if (green > 255) greenDir = -Math.random();
  if (green < 0) greenDir = +Math.random();

  blue += blueDir;
  if (blue > 255) blueDir = -Math.random();
  if (blue < 0) blueDir = +Math.random();

  ctx.fillStyle="rgb("+Math.floor(red)+","+Math.floor(green)+","+Math.floor(blue)+")";
}
